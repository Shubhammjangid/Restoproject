@using DIGITALMENU.MODEL
@model IEnumerable<Menu>

<div class="container">
     <h3 class="h3">All Dishes</h3>
           <div class="row"> 
            @foreach (var dish in Model)
            {
                 <div class="col mb-4">
                 <div class="card" style="width: 18rem;">
                    <img src="@dish.DishImageUrl" class="card-img-top" alt="...">
                    <div class="card-body">
                      <h5 class="card-title">@dish.DishName</h5>
                      <p class="card-text">@dish.DishDescription</p>
                      <a href="\menu\getdishbyid\@dish.DishID" class="btn btn-primary">View Details</a>
                    </div>
                  </div>
              </div>
            
            }
              </div>
              </div>